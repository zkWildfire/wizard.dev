{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Matrix Cache Simulator (Debug)",
			"type": "process",
			"group": "build",
			"command": "dotnet",
			"args": [
				"build",
				"--configuration",
				"Debug"
			],
			"options": {
				"cwd": "${workspaceFolder:Matrix Cache Simulator}"
			},
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Build Matrix Cache Simulator (Release)",
			"type": "process",
			"group": "build",
			"command": "dotnet",
			"args": [
				"build",
				"--configuration",
				"Release"
			],
			"options": {
				"cwd": "${workspaceFolder:Matrix Cache Simulator}"
			},
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Run Matrix Cache Simulator Tests (Debug)",
			"type": "process",
			"group": "test",
			"command": "dotnet",
			"args": [
				"test",
				"--configuration",
				"Debug",
				"--no-build",
				"--no-restore"
			],
			"options": {
				"cwd": "${workspaceFolder:Matrix Cache Simulator}"
			},
			"problemMatcher": "$msCompile",
			"dependsOn": [
				"Build Matrix Cache Simulator (Debug)"
			]
		}
	]
}
