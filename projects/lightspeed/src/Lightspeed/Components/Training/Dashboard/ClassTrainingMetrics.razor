@using Lightspeed.Components.Utils

<!-- Row 1: Header -->
<div class="row">
	<h2 class="text-info text-center">
		Label @ClassIndex Metrics
	</h2>
</div>

<!-- Row 2 & 3: Aggregate Statistics -->
<div class="row mb-3">
	<!-- Precision graph -->
	<div class="col-6">
		<LineGraph
			@ref="PrecisionGraph"
			ChartTitle="Precision"
			LineLabels="@_precisionGraphLabels"
		/>
	</div>

	<!-- Recall graph -->
	<div class="col-6">
		<LineGraph
			@ref="RecallGraph"
			ChartTitle="Recall"
			LineLabels="@_recallGraphLabels"
		/>
	</div>
</div>

<div class="row mb-3 justify-content-center">
	<!-- F1 Score graph -->
	<div class="col-6">
		<LineGraph
			@ref="F1Graph"
			ChartTitle="F1 Score"
			LineLabels="@_f1GraphLabels"
		/>
	</div>
</div>

<!-- Row 4: True/False Positive Rates -->
<div class="row mb-3">
	<!-- True Positives graph -->
	<div class="col-6">
		<LineGraph
			@ref="TruePositivesGraph"
			ChartTitle="True Positives Rate"
			LineLabels="@_tpGraphLabels"
		/>
	</div>

	<!-- False Positives graph -->
	<div class="col-6">
		<LineGraph
			@ref="FalsePositivesGraph"
			ChartTitle="False Positives Rate"
			LineLabels="@_fpGraphLabels"
		/>
	</div>
</div>

<!-- Row 5: True/False Negative Rates -->
<div class="row mb-3">
	<!-- True Negatives graph -->
	<div class="col-6">
		<LineGraph
			@ref="TrueNegativesGraph"
			ChartTitle="True Negatives Rate"
			LineLabels="@_tnGraphLabels"
		/>
	</div>

	<!-- False Negatives graph -->
	<div class="col-6">
		<LineGraph
			@ref="FalseNegativesGraph"
			ChartTitle="False Negatives Rate"
			LineLabels="@_fnGraphLabels"
		/>
	</div>
</div>
