@using Lightspeed.Classification.Validators

<div class="row mt-3">
	@if (Validator.ParameterType == typeof(bool))
	{
		<BoolHyperparameter
			Validator="@(Validator as BoolHyperparameterValidator)"
		/>
	}
	else if (Validator.ParameterType == typeof(int))
	{
		<IntHyperparameter
			Validator="@(Validator as IntHyperparameterValidator)"
		/>
	}
	else if (Validator.ParameterType == typeof(float))
	{
		<FloatHyperparameter
			Validator="@(Validator as FloatHyperparameterValidator)"
		/>
	}
	else if (Validator.ParameterType == typeof(string))
	{
		<StringHyperparameter
			Validator="@(Validator as StringHyperparameterValidator)"
		/>
	}
	else if (Validator.ParameterType.IsEnum)
	{
		<EnumHyperparameter
			Validator="@(Validator as StringSetHyperparameterValidator)"
		/>
	}
</div>
